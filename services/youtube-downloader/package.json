{
  "name": "youtube-downloader-microservice",
  "version": "1.0.0",
  "description": "YouTube downloader microservice for extracting video information and downloading media",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false --coverageReporters=text-lcov",
    "lint": "eslint . --ext .js,.json --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "precommit": "npm run lint && npm run format:check && npm test",
    "security:audit": "npm audit --audit-level moderate",
    "docker:build": "docker build -t youtube-downloader:latest .",
    "docker:run": "docker run -p 3001:3001 youtube-downloader:latest"
  },
  "keywords": [
    "youtube",
    "downloader",
    "microservice",
    "express",
    "ytdl-core"
  ],
  "author": "Sync Scribe Studio",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "ytdl-core": "^4.11.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.0",
    "validator": "^13.12.0",
    "winston": "^3.13.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "joi": "^17.13.0",
    "express-slow-down": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
